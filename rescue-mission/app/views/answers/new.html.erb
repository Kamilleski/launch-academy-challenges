<h2>New Answer for:</h2>
<h3><%= @question.title%></h3>
<% if @error %>
  <%= flash[:error] %>
<% end %>

<%= form_for [@question, @answer] do |f| %>
  <div class="field">
    <%= f.label :body, "Answer: " %><br />
    <%= f.text_area :body, size: "30x10" %> <br />
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
