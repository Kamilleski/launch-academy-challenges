<h1>Grocery List</h1>

<ul id='grocery-list'>
  <% @groceries.each do |item| %>
    <li class='item'>
       <form method='post' action='/groceries'>
       <input type='hidden' name='_method' value='delete'>

         <%= item['name'] %>
        <button type='submit' id='delete'>Delete</button>
      </form>
    </li>
  <% end %>
</ul>

<form method='post' action='/groceries' id='add'>
  <label for='grocery_name'>Name</label>
  <input type='text' name='name' id='grocery_name'>
  <input type='submit' value='Add'>
</form>
